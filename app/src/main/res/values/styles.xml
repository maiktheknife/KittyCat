<resources>

    <style name="CardStyle">
        <item name="android:layout_margin">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="cardBackgroundColor">?android:windowBackground</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="FabStyleHidden">
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:scaleX">0</item>
        <item name="android:scaleY">0</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextStyleTitle">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
