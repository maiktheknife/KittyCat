<resources>

    <style name="CardStyle">
        <item name="android:layout_margin">3dp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="cardBackgroundColor">?android:windowBackground</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="TextStyleTitle">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FabStyle">
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FabStyle.Hidden" parent="FabStyle">
        <item name="android:scaleX">0</item>
        <item name="android:scaleY">0</item>
    </style>

    <style name="AppAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomBarStyle">
        <item name="elevation">@dimen/bottom_bar_elevation</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="itemBackground">@drawable/nav_item_background</item>
        <item name="itemIconTint">@drawable/nav_item_color_state</item>
        <item name="itemTextColor">@drawable/nav_item_color_state</item>
    </style>

    <style name="Widget.AppCompat.CategorySpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:paddingEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingStart">@dimen/activity_horizontal_margin</item>
    </style>

</resources>
