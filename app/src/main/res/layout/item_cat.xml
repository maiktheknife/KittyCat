<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp">

        <ImageView
            android:id="@+id/cat_row_image"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="start|center"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:contentDescription="@null"
            android:transitionName="@string/transition_cat_image"
            tools:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cat_row_id"
                style="@style/TextStyle_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="ID" />

            <TextView
                android:id="@+id/cat_row_source_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:transitionName="@string/transition_cat_source_url"
                tools:text="SourceURL" />

            <TextView
                android:id="@+id/cat_row_image_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:transitionName="@string/transition_cat_url"
                tools:text="ImageURL" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>